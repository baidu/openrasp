    <logger name="com.fuxi.javaagent.plugin.alarm" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="ALARM"/>
    </logger>

    <logger name="com.fuxi.javaagent.tool.security.policy_alarm" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="POLICY_ALARM"/>
    </logger>

    <logger name="com.fuxi.javaagent.plugin.log" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="PLUGIN"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="RASP"/>
    </root>

</log4j:configuration>
